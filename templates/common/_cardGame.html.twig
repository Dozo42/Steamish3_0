<div class="col-6 col-sm-6 col-md-4 mb-4 {% if homeDisplay is defined %}col-lg-4{% else %}col-lg-3{% endif %} {% if accountDisplay is defined %}account-library{% else %}cardgame{% endif %}">
    {% if accountDisplay is defined %}
        <a href="{{path('app_one_game', {'slug': library.game.slug })}}">
    {% else %}
        <a href="{{path('app_one_game', {'slug': game.slug })}}">
    {% endif %}
        <div class="container-image">
           {% if accountDisplay is defined %}
                <img src="{{library.game.thumbnailCover}}" alt="{{library.game.name}}">
                <div class="container-installed">
                    <i class="fa-solid fa-circle {% if library.installed == true %}green{% else %}red{% endif %}"></i>
                </div>
            {% else %}
                <img class="img-fluid shadow {% if gamesDisplay is defined %}rounded-bottom{% endif %}" src="{{game.thumbnailCover}}" alt="{{game.name}}">
           {% endif %}
        </div>
    </a>
    <div class="d-flex justify-content-between">
        {% if accountDisplay is defined %}
            <p class="mb-0">{{library.timeConverter}}</p>
            <p class="mb-0">{{library.lastUsedAt|date('m F Y')}}</p>
        {% else %}
            <a href="{{path('app_one_game', {'slug': game.slug })}}">
            <h3 class="mt-1">{{game.name}}</h3>
            </a>
            <h2 class="h4">{{game.price}}â‚¬</h2>
        {% endif %}
    </div>
</div>