<div class="col-12 p-2">
    <div class="cardcomment">
        <div class="ps-3 py-3">
            <div class="d-flex align-middle justify-content-between pe-4">
                <p>{{ 'home.comment.written_on'|trans({
                    '%date%': comment.createdAt|date("m F Y")
                }) }}
                    {% if oneGameDisplay is defined %}
                    <a href="{{ path('app_user', {'name': comment.account.name}) }}"><b> {{ 'home.comment.written_by'|trans({
                    '%name%': comment.account.name
                }) }}</b></a>
                    {% endif %}
                </p>
                {# {% dump(comment)  %} #}
                {% if comment.note %}
                    <div>
                        {% for i in 1..comment.note %}
                            <i class="fa-solid fa-star orange"></i>
                        {% endfor %}
                    </div>    
                {% endif %}

            </div>
            <p class="pe-2">{{ comment.content }}</p>
            <div class="d-flex justify-content-end pe-4">
                <p><i class="fa-solid fa-circle-up green"></i></p>
                <p>{{ comment.upVotes }}</p>

                <p><i class="fa-solid fa-circle-down red ms-2"></i></p>
                <p>{{ comment.downVotes }}</p>
            </div>
            {% if accountDisplay is defined %}
            <h6 class="pe-2 ">{{ comment.game.name }}</h6>
            {% endif %}
        </div>
    </div>
</div>