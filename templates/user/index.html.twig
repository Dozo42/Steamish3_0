{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/Utilisateurs{% endblock %}

{% block body %}

<div class="container my-4">
    <nav class="m-2" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Utilisateurs</li>
        </ol>
    </nav>
    <div class="d-flex">
        <h2 class="mb-3">Utilisateurs</h2>
        <a class="btn btn-sm btn-outline-light ms-4 mb-3 mt-2 " href="{{path ('app_new_user')}}"><i class="fa-solid fa-plus"></i></a>
    </div>
    <table class="table table-dark table-hover table-striped border border-light border-2">
        <thead>
            <tr>
                <th scope="col col-2">Nom</th>
                <th scope="col col-2">Mail</th>
                <th scope="col col-3">Pseudo</th>
                <th scope="col col-1">Date d'inscription</th>
                <th scope="col col-1"></th>
            </tr>
        </thead>
        <tbody>
            {% for user in account %}
            <tr>
                <th><a href="{{ path('app_user', {'name': user.name }) }}">{{ user.name }}</a></th>
                <td>{{ user.email }}</td>
                <td>{{ user.nickname }}</td>
                <td>{{ user.createdAt |date("m F Y")  }}</td>
                <td><a href="{{path ('app_mod_user', {'name': user.name })}}"><i class=" orange fa-solid fa-pencil"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}