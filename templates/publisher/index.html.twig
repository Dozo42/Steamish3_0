{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/{{ 'home.nav.publishers'|trans }}{% endblock %}

{% block body %}

<div class="container my-4">
    <h2 class="mb-3">{{ 'home.menu.publishers'|trans }}</h2>
    <table class="table table-dark table-hover table-striped border border-light border-2">
        <thead>
            <tr>
                <th scope="col col-2">{{ 'home.publishers.country'|trans }}</th>
                <th scope="col col-3">{{ 'home.publishers.name'|trans }}</th>
                <th scope="col col-3">{{ 'home.publishers.website'|trans }}</th>
                <th scope="col col-1">{{ 'home.publishers.nb_games'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for publisher in publishers %}
            <tr>
                <th scope="row"><img src="{{ publisher.country.urlFlag }}"></th>
                <td>{{ publisher.name }}</td>
                <td><a href="{{ publisher.website }}" target="_blank">{{ publisher.website }}</a></td>
                <td>{{ publisher.games|length }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}