{% extends 'base-admin.html.twig' %}

{% block title %}Admin : {{ genre.name }}{% endblock %}

{% block body %}
    <div class="container my-4">
    <nav class="m-2" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_admin_genre') }}">Tout les genres</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ genre.name }}</li>
        </ol>
    </nav>
        <div class="my-4">
        <h2 class="mb-3">{{genre.name}}</h2>
        <a class="btn btn-sm btn-outline-light mb-3 mt-2 " href="{{ path('app_new_user')}}"><i class="orange fa-solid fa-pencil"></i></a>
        <a class="btn btn-sm btn-outline-light mb-3 mt-2 " href="{{ path('app_new_user')}}"><i class="red fa-solid fa-trash-can"></i></a>
    </div>
        <div class="row">
            {% for game in genre.games %}
                {% include "common/_cardGame.html.twig" with 
                {
                    'homeDisplay': true
                } 
                %}
            {% endfor %}
        </div>
    </div>

{% endblock %}