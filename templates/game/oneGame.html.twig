{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/Jeux{% endblock %}

{% block body %}

<div class="card mx-auto m-3 col-10">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{ game.thumbnailCover}}" class="img-fluid rounded-start" alt="{{ game.name }}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">{{ game.name }}</h3>
                <h5 class="card-text">{{ game.publisher.name }}</h5>
                <p class="card-text"><small class="text-muted">Publié le: {{ game.publishedAt |date("m F Y") }}             Prix: {{ game.price }}€</small></p>
                <p class="card-text"><small class="text-muted"></small></p>
                <p class="card-text">{{ game.description }}</p>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}