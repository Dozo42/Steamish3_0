{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/Jeux{% endblock %}

{% block body %}
{# card du jeux #}
<div class="card mx-auto mt-4 mb-4 col-10 border-2 rounded">
    <div class="row g-0">
        <div class="col-md-4 view">
            <img src="{{ game.thumbnailCover}}" class="img-fluid " alt="{{ game.name }}">
        </div>
        <div class="col-md-8 view">
            <div class="card-body">
                <h2 class="card-title">{{ game.name }}</h2>
                {% if game.publisher %}
                <a class="card-text" href=''>{{ game.publisher.name }}</a>
                {% endif %}
                <p class="card-text"><small class="text-muted">Publié le {{ game.publishedAt |date("m F Y") }}</small>
                </p>
                <h3 class="card-text">{{ game.price }}€</h3>
                <hr>
                <p class="card-text">{{ game.description | raw }}</p>
                <hr>
                <div class=" d-flex">
                    {% for genre in game.genres %}
                    <button type="button"
                        class="btn btn-sm btn-outline-light me-2 align-middle">{{ genre.name }}</button>
                    {# <p class="card-text me-2 align-middle">{{ genre.name }}</p> #}
                    {% endfor %}
                </div>
                <hr>
                <div class="d-flex my-0">
                    {% for langue in game.countries %}
                    <div class="me-2">
                        <img src=" {{ langue.urlFlag }}" alt="{{ langue.nationality }}">
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

{# commentaires #}
<div class="comment-section pb-4 pt-4">

    <div class="container px-0">
        <div class="row">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="m-0">Avis</h1>
                <div><a class="btn btn-sm btn-outline-light" href="{{path('app_avis')}}"><i class="fa-solid fa-plus"></i></a></div>
            </div>
            {% for comment in game.comments|slice(0, 6) %}
            <div class="col-12 p-2">
                <div class="cardcomment">
                    <div class="ps-3 py-3">
                        <div class="d-flex align-middle justify-content-between pe-4">
                            <p>Le {{ comment.createdAt|date("m F Y") ~ ' par '}}<a
                                    href="{{ path('app_user', {'name': comment.account.name}) }}"><b>{{ comment.account.name }}</b></a>
                            </p>
                            <div class="d-flex">
                                <p><i class="fa-solid fa-circle-up green"></i></p>
                                <p>{{ comment.upVotes }}</p>

                                <p><i class="fa-solid fa-circle-down red ms-2"></i></p>
                                <p>{{ comment.downVotes }}</p>
                            </div>
                        </div>
                        <p class="pe-2">{{ comment.content  }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{# jeux similaires #}
<div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="mb-1">Jeux similaires</h1>
    </div>
    <div class="row">
        {% for game in similar|slice(0, 3) %}
        {% include "common/_cardGame.html.twig" %}
        {% endfor %}
    </div>
</div>

{% endblock %}