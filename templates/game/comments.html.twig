{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/Jeux/Avis{% endblock %}

{% block body %}

{# commentaires #}
<div class="comment-section pb-4 pt-4">

    <div class="container px-0">
        <div class="row">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="m-0">Avis sur {{ game.name }}</h1>
                <div><a class="btn btn-sm btn-outline-light" href="{{path('app_one_game', {'slug': game.slug })}}"><i class="fa-solid fa-arrow-left"></i></a></div>
            </div>
            {% for comment in game.comments %}
            <div class="col-12 p-2">
                <div class="cardcomment">
                    <div class="ps-3 py-3">
                        <div class="d-flex align-middle justify-content-between pe-4">
                            <p>Le {{ comment.createdAt|date("m F Y") ~ ' par '}}<a
                                    href="{{ path('app_user', {'name': comment.account.name}) }}"><b>{{ comment.account.name }}</b></a>
                            </p>
                            <div class="d-flex">
                                <p><i class="fa-solid fa-circle-up green"></i></p>
                                <p>{{ comment.upVotes }}</p>

                                <p><i class="fa-solid fa-circle-down red ms-2"></i></p>
                                <p>{{ comment.downVotes }}</p>
                            </div>
                        </div>
                        <p class="pe-2">{{ comment.content  }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}