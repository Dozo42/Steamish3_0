{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/Jeux{% endblock %}

{% block body %}
<div class="container">

    <div class="row">
        <h1 class="mb-4">Liste des jeux</h1>

        {% for game in games %}
        <div class="col-lg-3 col-md-6 mb-3 cardgame">
            <a href="{{path('app_one_game', {'slug': game.slug })}}">
                <div class="container-image">
                    <img class="img-fluid" src="{{game.thumbnailCover}}" alt="{{game.name}}">
                </div>
            </a>
            <div class="d-flex justify-content-between mt-1">
                <a href="{{path('app_one_game', {'slug': game.slug })}}">
                    <h3>{{game.name}}</h3>
                </a>
