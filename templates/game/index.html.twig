{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">

        {% for game in games %}
        <div class="col-lg-3 col-md-6 mb-3 cardgame">
            <div class="container-image">
                <img class="img-fluid" src="{{game.thumbnailCover}}" alt="{{game.name}}">
            </div>
            <h3 class="mt-1"><b>{{game.name}}</b></h3>
        </div>
        {% endfor %}
   
    </div>
</div>
{% endblock %}