{% extends 'base-front.html.twig' %}

{% block title %}Forums !{% endblock %}

{% block body %}


<div class="container my-4">

    <nav class="m-2 mt-4" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Forums</li>
        </ol>
    </nav>
    <div class="d-flex justify-content-between">
        <h2 class="mb-3">Forums</h2>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-12 col-md-3 col-lg-3 forumCard py-2 my-2 rounded ">
            <h4>Top Utilisateur</h4>
            <p><a href="{{ path('app_user', {'name': topUser.name }) }}"><i class="fa-solid fa-crown orange"></i>{{topUser.name}}</a></p>
        </div>
    </div>

    <div class="row mt-2 mb-4 justify-content-around">
        <div class="col-12 col-md-3 col-lg-3 forumCard py-2 my-2 rounded">
            <h4>Forum Top Tendance</h4>
            <p><a href="{{path('app_forum_topic', {'id': forumTendance.id})}}">{{forumTendance.title}}</a></p>
        </div>
        <div class="col-12 col-md-3 col-lg-3 forumCard py-2 my-2 rounded">
            <h4>Forum Gold</h4>
            <p><a href="{{path('app_forum_topic', {'id': forumGold.id})}}">{{forumGold.title}}</a></p>
        </div>
        <div class="col-12 col-md-3 col-lg-3 forumCard py-2 my-2 rounded">
            <h4>Forum needAttention </h4>
            <p><a href="{{path('app_forum_topic', {'id': forumNeed.id})}}">{{forumNeed.title}}</a></p>
        </div>

    </div>
    <table class="table table-dark table-hover table-striped border border-light border-2">
        <thead>
            <tr>
                <th scope="col col-2">Titre</th>
                <th scope="col col-2">NbTopic</th>
            </tr>
        </thead>
        <tbody>
            {% for forum in pagination %}
            <tr>
                <th><a href="{{path('app_forum_topic', {'id': forum.id})}}">{{ forum.title }}</a></th>
                <td>{{ forum.topics|length }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
</div>


{% endblock %}